-- Procedimiento para insertar un nuevo cliente
CREATE PROCEDURE spInsertCliente
    @COD_CLI INT,
    @RSO_CLI NVARCHAR(255),
    @DIR_CLI NVARCHAR(255),
    @TLF_CLI NVARCHAR(50),
    @RUC_CLI NVARCHAR(20),
    @COD_DIS INT,
    @FEC_REG DATE,
    @TIP_CLI NVARCHAR(50),
    @CON_CLI NVARCHAR(50)
AS
BEGIN
    INSERT INTO [BDVENTAS].[dbo].[CLIENTE] (COD_CLI, RSO_CLI, DIR_CLI, TLF_CLI, RUC_CLI, COD_DIS, FEC_REG, TIP_CLI, CON_CLI)
    VALUES (@COD_CLI, @RSO_CLI, @DIR_CLI, @TLF_CLI, @RUC_CLI, @COD_DIS, @FEC_REG, @TIP_CLI, @CON_CLI);
END;


-- Procedimiento para insertar un nuevo vendedor
CREATE PROCEDURE spInsertVendedor
    @COD_VEN INT,
    @NOM_VEN NVARCHAR(255),
    @APE_VEN NVARCHAR(255),
    @SUE_VEN DECIMAL(18, 2),
    @FTI_VEN DATE,
    @TIP_VEN NVARCHAR(50),
    @COD_DIS INT
AS
BEGIN
    INSERT INTO [BDVENTAS].[dbo].[VENDEDOR] (COD_VEN, NOM_VEN, APE_VEN, SUE_VEN, FTI_VEN, TIP_VEN, COD_DIS)
    VALUES (@COD_VEN, @NOM_VEN, @APE_VEN, @SUE_VEN, @FTI_VEN, @TIP_VEN, @COD_DIS);
END;
